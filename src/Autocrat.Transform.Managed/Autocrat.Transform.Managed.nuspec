<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
  <metadata>
    <authors>Samuel Cragg</authors>
    <description>Compiles code for use with the Autocrat framework.</description>
    <developmentDependency>true</developmentDependency>
    <id>$id$</id>
    <license type="expression">MIT</license>
    <version>$version$</version>
  </metadata>

  <files>
    <file src="bin\Publish\*.dll" target="tools" />
    <file src="bin\Publish\*.json" target="tools" />
    <file src="PackageFiles\*.*proj" target="content" />
    <file src="PackageFiles\NativeCompile.Linux.targets" target="content" />
    <file src="PackageFiles\NativeCompile.Windows.targets" target="content" />
    <file src="PackageFiles\Package.props" target="build/$id$.props" />
    <file src="PackageFiles\Package.targets" target="build/$id$.targets" />
  </files>
</package>
